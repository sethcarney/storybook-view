{
  "name": "storybook-view",
  "displayName": "Storybook View",
  "description": "Storybook integration for VSCode - preview React components with all Storybook features directly in your editor",
  "version": "1.0.5",
  "publisher": "sethssoftware",
  "repository": {
    "type": "git",
    "url": "https://github.com/sethcarney/storybook-view.git"
  },
  "bugs": {
    "url": "https://github.com/sethcarney/storybook-view/issues"
  },
  "homepage": "https://github.com/sethcarney/storybook-view#readme",
  "keywords": [
    "storybook",
    "react",
    "component",
    "preview",
    "ui",
    "development",
    "testing"
  ],
  "license": "MIT",
  "icon": "icon/icon.png",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Visualization",
    "Other"
  ],
  "activationEvents": [
    "onLanguage:javascript",
    "onLanguage:javascriptreact",
    "onLanguage:typescript",
    "onLanguage:typescriptreact"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "storybookview.openPreview",
        "title": "Open Storybook Preview",
        "icon": "$(eye)"
      },
      {
        "command": "storybookview.refreshPreview",
        "title": "Refresh Preview",
        "icon": "$(refresh)"
      },
      {
        "command": "storybookview.startStorybook",
        "title": "Storybook View: Start Storybook Server"
      },
      {
        "command": "storybookview.stopStorybook",
        "title": "Storybook View: Stop Storybook Server"
      },
      {
        "command": "storybookview.openStorybook",
        "title": "Storybook View: Open Storybook in Browser"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "storybookview.openPreview",
          "when": "resourceFilename =~ /\\.stories\\.(jsx|tsx)$/",
          "group": "navigation"
        }
      ],
      "editor/context": [
        {
          "command": "storybookview.openPreview",
          "when": "resourceFilename =~ /\\.stories\\.(jsx|tsx)$/",
          "group": "navigation"
        }
      ]
    },
    "configuration": {
      "title": "Storybook View",
      "properties": {
        "storybookview.storybookPath": {
          "type": "string",
          "default": "",
          "description": "Path to the directory containing your Storybook configuration (relative to workspace root). Leave empty to use workspace root."
        },
        "storybookview.port": {
          "type": "number",
          "default": 6006,
          "description": "Port for the Storybook server"
        },
        "storybookview.inactivityTimeout": {
          "type": "number",
          "default": 5,
          "minimum": 1,
          "maximum": 60,
          "description": "Automatically stop Storybook server after this many minutes of inactivity (1-60 minutes)"
        }
      }
    }
  },
  "scripts": {
    "clean": "node -e \"require('fs').rmSync('out', {recursive: true, force: true})\"",
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "package": "npm run clean && vsce package",
    "install-extension": "code --install-extension storybook-view-1.0.0.vsix",
    "setup": "cd test-app && npm install",
    "dev": "npm run watch",
    "storybook": "cd test-app && npm run storybook"
  },
  "devDependencies": {
    "@types/node": "^16.18.126",
    "@types/vscode": "^1.74.0",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "@vscode/test-electron": "^2.2.0",
    "eslint": "^8.28.0",
    "prettier": "3.6.2",
    "typescript": "^4.9.4",
    "vsce": "^2.15.0"
  },
  "volta": {
    "node": "24.11.0"
  }
}
